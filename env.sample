# Database Configuration (SQLite is used by default)
# No database credentials needed for SQLite

# Server Configuration
PORT=3001

# Biometric Integration Configuration
ENABLE_BIOMETRIC=true
BIOMETRIC_PORT=8080
BIOMETRIC_HOST=0.0.0.0

# Email Configuration (optional - for automated notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# JSON Web Token Secret (for future authentication features)
JWT_SECRET=your_super_secret_jwt_key

# Data Storage (optional - defaults to ./data)
# WIN_DATA_ROOT=C:/ProgramData/gmgmt

# Development/Production Environment
NODE_ENV=development
